  "umd:main": "dist/sled.umd.js",
  "module": "dist/sled.m.js",
  "scripts": {
    "build": "microbundle build index.js",
    "build:site": "NODE_ENV=production webpack --env.singleRun",
    "watch": "microbundle watch index.js",
    "start": "webpack-dev-server",
    "lint": "eslint --ext js index.js",
    "test": "npm run build && karmatic"
